<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11AC7C"
    tools:context=".IntroduceActivity">

    <RelativeLayout
        android:id="@+id/introduce_layout"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/introbackimgbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/attraction_image_shape"
            android:src="@drawable/back" />

        <TextView
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:id="@+id/intro_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="榕園"
            android:paddingBottom="20dp"
            android:textColor="#34495E"
            android:textSize="24dp" />
    </RelativeLayout>

    <ScrollView
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/introduce_layout">

        <LinearLayout
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/intro_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:background="@color/ic_launcher_background"
                android:maxHeight="340dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:lineHeight="25dp"
                android:id="@+id/intro_message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingTop="4dp"
                android:paddingRight="30dp"
                android:paddingBottom="4dp"
                android:text="info"
                android:textColor="#34495E"
                android:textSize="20dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>